<!-- 销售订单列表 -->
<h3 class='box_head'>委托销售订单</h3>
<div class='box_body'>
	<div class="sales_order">
		<ul class="sales_head">
			<li class="sales_noe">
				<span>订单状态：</span>
				<a href="" data-star=''  class="on">所有</a>
				<a href="" data-star='1'>未完成</a>
				<a href="" data-star='2'>已报价</a>
			</li>
			<li class="sales_two">
				<span>下单日期：</span>
				<input type="text" class="startDate" placeholder="请选择日期" > <i style="margin:0 5px;">-</i>
				<input type="text" class="endDate" placeholder="请选择日期">
				<span>最近：</span>
				<a href="javascript:;" class="cur" data-day='-6'>一周</a>
				<a href="javascript:;" data-day='-30'>1个月</a>
				<a href="javascript:;" data-day='-90'>3个月</a>
				<a href="javascript:;" data-day='-365'>1年</a>
			</li>
			<li>
				<span class="fl">订单号：</span>
				<div class="fl">
					<input type="text" class="key" placeholder="请输入订单号">
					<a ng-click="check_polling()"><i></i></a>
				</div>
			</li>
		</ul> 
		<div class="sales_list">
			<p style="color:#999;">共 <span style="color:#333;">{{recordsFiltered}}</span> 个销售订单</p>
			<table cellpadding="0" cellspacing="0" border="0">
				<thead>
					<th>序号</th>
					<th>销售单号</th>
					<th>下单时间</th>
					<th>收款方式</th>
					<th>订单状态</th>
					<th class="rigbor">操作</th>
				</thead>
				<tbody>
					<tr ng-repeat="d in salesList" ng-if="salesList.length>0">
						<td style="width:40px;">{{index+($index+1)}}</td>
						<td>{{d.saleOrderSn}}</td>
						<td>{{d.orderDateCreate}}</td>
						<td>{{d.paymentsAccountName}}</td>
						<td>{{d.orderStateStr}}</td>
						<td class="operation">
							<!-- <div ng-if="d.orderState!='2'">
								<a ng-if="d.orderState=='NODE_ORDER_SALE_master_004'&&d.offerState == '0'" href="javascript:;" ng-click="confirm_trading(d)">确认交易</a>  
								<a ng-if="d.orderState=='NODE_ORDER_SALE_master_000'" href="javascript:;" ng-click="renove_account(d.saleOrderSn)">取消订单</a>  
								<a href="#details?saleOrderSn={{d.saleOrderSn}}&orderState={{d.orderState}}" style='color:#0eb83a;'>订单详情</a>
							</div>

							<div ng-if="d.orderState=='2'">
								<a href="javascript:;" style='color:#0eb83a;' ng-click="confirm_trading(d)">确认交易</a>
							</div> -->

							<span>请选操作</span>
							<div class='open_ul' ng-if="d.orderState!='2'">
								<a ng-if="d.orderState=='NODE_ORDER_SALE_master_004'&&d.offerState == '0'" href="javascript:;" ng-click="confirm_trading(d)">确认交易</a>  
								<a ng-if="d.orderState=='NODE_ORDER_SALE_master_000'" href="javascript:;" ng-click="renove_account(d.saleOrderSn)">取消订单</a>  
								<a href="#details?saleOrderSn={{d.saleOrderSn}}&orderState={{d.orderState}}">订单详情</a>
							</div>

							<div class='open_ul' ng-if="d.orderState=='2'">
								<a href="javascript:;" ng-click="confirm_trading(d)">确认交易</a>
							</div>
						</td>
					</tr>
					<tr ng-if="!salesList.length>0">
						<td colspan="6">暂无数据</td>
					</tr>
				</tbody>
			</table>
			<div id="Pagination" style="margin-top:25px;" class="page-pagination"><!-- 这里显示分页 --></div>
		</div>
	</div>
</div>

